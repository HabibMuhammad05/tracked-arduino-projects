void singleClick() {
  if (pos >= 100) {
    DEBUG_PRINTLN("- Lamp Off");
    buzOff();
    for (pos = maxPwm; pos >= 1; pos -= 1) { 
      DEBUG_PRINTLN(pos);
      analogWrite(lamp, pos);
      delay(5);                      
    }
    digitalWrite(lamp, LOW);
  } 
  else{
    DEBUG_PRINTLN("- Lamp On");
    buzOn();
    for (pos = 1; pos <= maxPwm; pos += 1) { 
      DEBUG_PRINTLN(pos);
      analogWrite(lamp, pos);
      delay(5);                      
    }
  }
}


