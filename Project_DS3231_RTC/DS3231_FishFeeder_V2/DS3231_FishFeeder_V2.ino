    DEBUG_PRINT(" - ");
    DEBUG_PRINTLN(rtc.getDateStr());
        
    u8g2.clearBuffer();
    u8g2.setFontMode(1);
    u8g2.setBitmapMode(1);
    u8g2.setFont(u8g2_font_t0_14b_tr);      //tampilkan jam
